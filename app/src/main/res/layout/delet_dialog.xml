<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_180sdp"
    android:layout_marginRight="@dimen/_40sdp"
    android:layout_marginLeft="@dimen/_40sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF8CB"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/delet_show"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ARE YOU SURE ?"
            android:layout_gravity="center"
            android:textSize="@dimen/_22sdp"
            android:fontFamily="@font/baloo_regular"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="data not restore after delete."
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/baloo_regular"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/can"
                android:layout_width="85dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:background="@drawable/delet_border_pr_un">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/baloo_regular"
                    android:text="CANCEL"
                    android:textColor="@drawable/border_pr_un"
                    android:textSize="@dimen/_10sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/del"
                android:layout_width="85dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/red_delet_pr_un">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/baloo_regular"
                    android:text="DELETE"
                    android:textColor="@drawable/delet_text"
                    android:textSize="@dimen/_10sdp" />

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>